<!DOCTYPE html>
<html>
<head>
  <title>Core</title>
  <%= stylesheet_link_tag    "dwl/application", media: "all" %>
  <%= javascript_include_tag "dwl/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'Dwl Engine', dwl.root_path, class: "navbar-brand" %>
      </div>
      <%- if current_user %>
        <div class="navbar-collapse collapse" id="navbar">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to 'My Account', dwl.edit_user_registration_path %>
            </li>
            <li>
              <%= link_to 'Logout', dwl.destroy_user_session_path,
                                   method: :delete %>
            </li>
          </ul>
        </div>
        <% end %>
    </div>
  </nav>

  <div class="container-fluid" role="main">
    <% flash.each do |key, value| %>
      <div class="<%= flash_class(key.to_sym) %>"><%= value %></div>
    <% end %>
    <div class="jumbotron">
      <%= yield %>
    </div>
  </div>

</body>
</html>
